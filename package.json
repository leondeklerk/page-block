	},
	"devDependencies": {
		"@tailwindcss/forms": "0.5.11",
		"@tailwindcss/vite": "4.2.1",
		"@tsconfig/node24": "24.0.4",
		"@types/firefox-webext-browser": "143.0.0",
		"@types/node": "24.11.0",
		"@vitejs/plugin-vue": "6.0.4",
		"@vue/eslint-config-prettier": "10.2.0",
		"@vue/eslint-config-typescript": "14.7.0",
