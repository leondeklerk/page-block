		"eslint": "9.39.3",
		"eslint-plugin-vue": "10.8.0",
		"husky": "9.1.7",
		"lint-staged": "16.3.0",
		"prettier": "3.8.1",
		"tailwindcss": "4.2.1",
		"typescript": "5.9.3",
		"vite": "7.3.1",
		"vite-plugin-vue-devtools": "8.0.6",
		"vue-tsc": "3.2.5"
	}
