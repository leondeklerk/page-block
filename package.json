{
	"name": "vue3-template",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "bunx --bun vite",
		"build": "bun run lint && bun run type-check && bun run build-only",
		"build:watch": "bunx --bun vite build --watch",
		"build-only": "bunx --bun vite build",
		"lint": "eslint --ext .ts,.vue,.js --max-warnings 0 .",
		"lint:fix": "eslint --ext .ts,.vue,.js --fix .",
		"prepare": "husky",
		"preview": "bunx --bun vite preview",
		"test:unit": "bunx --bun vitest",
		"type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false "
	},
	"lint-staged": {
		"*.{js,ts,vue}": "eslint --ext .ts,.vue,.js --max-warnings 0"
	},
	"dependencies": {
		"@fortawesome/fontawesome-free": "6.7.2",
		"vue": "3.5.13",
		"xss": "1.0.15",
		"zod": "3.24.2"
	},
	"devDependencies": {
		"@rushstack/eslint-patch": "1.11.0",
		"@tailwindcss/forms": "0.5.10",
		"@tsconfig/node20": "20.1.4",
		"@types/bun": "1.2.5",
		"@types/firefox-webext-browser": "120.0.4",
		"@vitejs/plugin-vue": "5.2.1",
		"@vue/eslint-config-prettier": "10.2.0",
		"@vue/eslint-config-typescript": "14.5.0",
		"@vue/tsconfig": "0.7.0",
		"autoprefixer": "10.4.21",
		"eslint": "9.22.0",
		"eslint-plugin-vue": "10.0.0",
		"husky": "9.1.7",
		"lint-staged": "15.5.0",
		"postcss": "8.5.3",
		"prettier": "3.5.3",
		"tailwindcss": "4.0.14",
		"typescript": "5.8.2",
		"vite": "6.2.2",
		"vue-tsc": "2.2.8"
	}
}
